<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wwfonline">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.statistics.StatActivity"
            android:configChanges="orientation"
            android:label="@string/animal_stat"
            android:screenOrientation="locked"/>
        <activity android:name=".ui.review.AnimalTypeActivity"
            android:configChanges="orientation"
            android:label="@string/animal_type"
            android:screenOrientation="locked"/>
        <activity android:name=".ui.review.AnimalDetailsActivity"
            android:configChanges="orientation"
            android:label="@string/animal_details"
            android:screenOrientation="locked"/>
        <activity android:name=".ui.review.AnimalListActivity"
            android:configChanges="orientation"
            android:label="@string/animal_list"
            android:screenOrientation="locked"/>
        <activity android:name=".ui.news.NewsDetailsActivity"
            android:configChanges="orientation"
            android:label="@string/news_details"
            android:screenOrientation="locked"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="locked"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>