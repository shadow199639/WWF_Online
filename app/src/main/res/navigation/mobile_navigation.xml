    app:startDestination="@id/navigation_news">

    <fragment
        android:id="@+id/navigation_review"
        android:name="com.example.wwfonline.ui.review.ReviewFragment"
        android:label="@string/title_review"
        tools:layout="@layout/fragment_review" />

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.wwfonline.ui.news.NewsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.wwfonline.ui.statistics.StatisticsFragment"
        android:label="@string/title_statistics"
